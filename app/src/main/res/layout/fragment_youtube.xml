<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.YoutubeFragment">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:videoId="S0Q4gqBUs7c"
        app:autoPlay="true" />








    <com.google.android.material.card.MaterialCardView
        android:layout_below="@+id/youtube_player_view"
        android:id="@+id/card_view"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_5sdp"
        android:layout_marginVertical="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:id="@+id/tvQuestionno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/Purple_color"
                android:fontFamily="@font/poppins_medium"
                />

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_medium"
                />



            <RadioGroup
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_button1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:buttonTint="@color/radio_button_color_selector"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/radio_button_bg"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_weight="1"
                    />

                <RadioButton
                    android:id="@+id/radio_button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:buttonTint="@color/radio_button_color_selector"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/radio_button_bg"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/radio_button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/radio_button_text_color_selector"
                    android:buttonTint="@color/radio_button_color_selector"
                    android:padding="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@drawable/radio_button_bg"
                    android:gravity="center_vertical"
                    android:layoutDirection="rtl"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_weight="1"/>


            </RadioGroup>



            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="next"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:padding="@dimen/_10sdp"
                android:gravity="center"
                android:layoutDirection="rtl"
                />


        </LinearLayout>

        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>